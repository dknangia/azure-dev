@model ContactManager.V1.Models.Tax_Calculator.DtoIncomeDetails

@{
    ViewData["Title"] = "CalculateTax";
}

<h1>Calculate Tax</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CalculateTax" asp-controller="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TotalIncome" class="control-label"></label>
                <input asp-for="TotalIncome" class="form-control" />
                <span asp-validation-for="TotalIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalTaxDeduction" class="control-label"></label>
                <input asp-for="TotalTaxDeduction" class="form-control" />
                <span asp-validation-for="TotalTaxDeduction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label">Country :</label>
                <select asp-for="Country">
                    <option value="USA">United States</option>
                    <option value="UK">United Kingdom</option>
                    <option value="IN">India</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate Tax" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <strong>Total Tax : @ViewBag.TotalTax</strong>
</div>

